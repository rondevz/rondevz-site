---
import { Image } from "astro:assets";
import { cn } from "../utils";
import CubeScene from "./CubeScene.tsx";
const { class: className } = Astro.props;
---

<div class={cn("flex flex-col items-center justify-center w-full h-full", className)}>
	<Image
		src="https://avatars.githubusercontent.com/u/41125008?v=4"
		alt="Profile Pic from Github"
		class="rounded-2xl size-24 mb-4"
		width={100}
		height={100}
		loading="eager"
	/>

	<h1 class="relative text-5xl text-center font-black mb-2.5">		
		Hi, I'm Ronald Pereira		
	</h1>

	<p class="text-xl text-center mb-8">
		I'm a Computer Engineer who loves
		<span class="text-pink-400">Coding</span>,
		<span class="text-pink-400">Video Games</span>
		and <span class="text-pink-400">Music</span>
	</p>

	<p class="text-base text-gray-200 text-center max-w-3xl">
		Full-stack developer skilled in technologies as: PHP, Laravel, React, Go, Javascript and whatever technology you
		throw me in. I focus on building efficient, user-focused web/mobile applications and enjoy solving complex problems.

		<br><br>
		Yes, I like Dark Souls 2.
	</p>
	
	<div class="h-60 w-full max-w-md mt-4 relative">
		<CubeScene client:load className="absolute inset-0" />
	</div>
</div>
