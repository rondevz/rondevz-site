---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

interface Project {
  title: string;
  description: string;
  techStack: string[];
  link: string;
  github: string;
}

const contributedProjects: Project[] = [
  {
    title: "Enterprise DXP",
    description: "Enterprise-grade digital experience platform with advanced content modeling",
    techStack: ["TypeScript", "Next.js", "GraphQL"],
    link: "https://example.com/dxp",
    github: "https://github.com/organization/dxp"
  },
  {
    title: "Analytics Dashboard",
    description: "Real-time data visualization and insights for enterprise clients",
    techStack: ["React", "D3.js", "Node.js"],
    link: "https://example.com/analytics",
    github: "https://github.com/organization/analytics"
  },
];

const personalProjects: Project[] = [
  {
    title: "AI Code Assistant",
    description: "An intelligent coding companion using machine learning techniques",
    techStack: ["Python", "TensorFlow", "FastAPI"],
    link: "https://example.com/code-assistant",
    github: "https://github.com/yourusername/code-assistant"
  },
  {
    title: "Dev Portfolio Template",
    description: "Minimalist, high-performance portfolio template for developers",
    techStack: ["Astro", "Tailwind CSS", "TypeScript"],
    link: "https://example.com/portfolio",
    github: "https://github.com/yourusername/portfolio"
  },
  {
    title: "Pixel Game Engine",
    description: "Lightweight 2D game engine for creating retro-styled games",
    techStack: ["JavaScript", "WebGL", "Canvas API"],
    link: "https://example.com/game-engine",
    github: "https://github.com/yourusername/game-engine"
  },
];

const renderProjects = (projects: Project[]) => {
  return `
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      ${projects.map((project: Project) => `
        <div class="border border-gray-800 bg-gray-900/50 backdrop-blur-sm rounded-lg p-6 hover:border-gray-700 transition-all duration-300 hover:translate-y-[-4px] hover:shadow-lg hover:shadow-pink-900/20">
          <h3 class="text-xl font-bold mb-2">${project.title}</h3>
          <p class="text-gray-400 mb-4">${project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            ${project.techStack.map((tech: string) => `
              <span class="bg-gray-800 text-xs px-2 py-1 rounded-full text-gray-300">${tech}</span>
            `).join('')}
          </div>
          <div class="flex gap-4">
            <a href="${project.link}" class="text-pink-400 hover:text-pink-300 text-sm flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
              </svg>
              Live Demo
            </a>
            <a href="${project.github}" class="text-gray-400 hover:text-gray-300 text-sm flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Code
            </a>
          </div>
        </div>
      `).join('')}
    </div>
  `;
}
---

<Layout>
  <main class="text-gray-200 w-full h-full overflow-x-hidden">
    <div class="mt-24 mb-36 lg:mt-28 lg:mb-40">
      <h1 class="relative text-3xl md:text-4xl text-left max-w-xl font-black mb-4">
        Crafting digital experiences <span class="text-pink-400">(one pixel at a time)</span>
      </h1>
      
      <p class="text-lg text-left text-gray-400 mb-12">
        Here you'll find a collection of projects that reflect my passion for creating intuitive, performant, and visually striking digital solutions.
      </p>

      <!-- Professional Projects Section -->
      <section class="mb-20">
        <h2 class="text-2xl font-bold mb-6 flex items-center">
          <span class="flex-shrink-0 w-8 h-8 mr-3 rounded-full bg-purple-600 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </span>
          Projects I've Contributed To
        </h2>
        <p class="text-gray-400 mb-8">Professional projects I've worked on as part of larger teams and organizations.</p>
        
        <Fragment set:html={renderProjects(contributedProjects)} />
      </section>

      <!-- Personal Projects Section -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center">
          <span class="flex-shrink-0 w-8 h-8 mr-3 rounded-full bg-pink-600 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
            </svg>
          </span>
          Personal Projects
        </h2>
        <p class="text-gray-400 mb-8">Side projects, experiments, and passion-driven creations I've built independently.</p>
        
        <Fragment set:html={renderProjects(personalProjects)} />
      </section>

      <div class="mt-16 text-center">
        <p class="text-gray-400 mb-4">Interested in collaborating on a project?</p>
        <a href="/contact" class="bg-pink-500 hover:bg-pink-600 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-300">
          Let's talk
        </a>
      </div>
    </div>
  </main>
</Layout>
